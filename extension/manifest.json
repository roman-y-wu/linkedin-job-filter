{
  "manifest_version": 3,
  "name": "Hide LinkedIn Jobs",
  "short_name": "Hide LinkedIn Jobs",
  "description": "Hide promoted jobs, companies, and keywords on LinkedIn job search.",
  "version": "8.2.0",
  "icons": {
    "16": "/assets/images/hide-n-seek-icon-16.png",
    "32": "/assets/images/hide-n-seek-icon-32.png",
    "48": "/assets/images/hide-n-seek-icon-48.png",
    "128": "/assets/images/hide-n-seek-icon-128.png"
  },
  "permissions": ["scripting", "storage", "tabs"],
  "optional_host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "action": {
    "default_title": "Hide LinkedIn Jobs",
    "default_popup": "/runtime/popup/popup.html",
    "default_icon": {
      "16": "/assets/images/hide-n-seek-icon-16.png",
      "32": "/assets/images/hide-n-seek-icon-32.png",
      "48": "/assets/images/hide-n-seek-icon-48.png",
      "128": "/assets/images/hide-n-seek-icon-128.png"
    }
  },
  "background": {
    "service_worker": "/runtime/background/background.js",
    "type": "module"
  }
}
